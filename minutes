import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        //TIP Press <shortcut actionId="ShowIntentionActions"/> with your caret at the highlighted text
        // to see how IntelliJ IDEA suggests fixing it.


double hours;
Scanner keyboard = new Scanner(System.in);


System.out.println("Please enter the time in hours:");

        hours = keyboard.nextDouble();

        double seconds = hours * 3600;

        long roundedSeconds = Math.round(seconds);

        double minutes = hours * 60;
        long roundedMinutes = Math.round(minutes);
        System.out.println(hours + " hours is equal to " + roundedSeconds + " seconds.");

        System.out.println(hours + " hours is equal to " + roundedSeconds+ " seconds and " + roundedMinutes + " minutes.");


    }
    }
